{% extends "base.html.twig" %}
{% block body %}
  <h3>Communities</h3>
  <table class="table table-striped table-bordered">
    <tbody>
      {% for community in communities %}
        <tr>
          <td>{{ community.name }}</td>
          <td style="width: 100px;">
            <a href="/removeCommunity?community={{ community.id }}" class="btn btn-danger btn-sm">Remove</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <form action="/addCommunity" method="post" class="d-flex justify-content-end mb-4">
    <input class="form-control me-2" type="text" name="community" placeholder="Community" />
    <button class="btn btn-primary">Add</button>
  </form>

  <h3>Banned</h3>
  <table class="table table-striped table-bordered">
    <tbody>
      {% for banned in bannedDomains %}
        <tr>
          <td>{{ banned.hostname }}</td>
          <td>{{ banned.reason }}</td>
          <td style="width: 100px;">
            <a href="/removeBanned?banned={{ banned.id }}" class="btn btn-danger btn-sm">Remove</a>
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
  <form action="/addBanned" method="post" class="d-flex justify-content-end mb-4">
    <input class="form-control me-2" type="text" name="hostname" placeholder="Hostname" />
    <input class="form-control me-2" type="text" name="reason" placeholder="Reason" />
    <button class="btn btn-primary">Add</button>
  </form>
{% endblock %}
